package repeticao;

import javax.swing.JOptionPane;

public class Exercicio2Repeticao {

	public static void main(String[] args) {
		/*
		 *Exercicio 2
		Monte um programa que solicite a idade e o nome das pessoas.
		A aplicação continuará perguntando nome e idade enquanto o usuário afirmar que deseja continuar.
			Ao terminar, a aplicação deverá exibir:
			- a quantidade de pessoas maiores de idade e 
			- a média entre todas as idades que foram digitadas. 
			- a pessoa mais experiente (nome e idade)
			- a pessoa mais jovem (nome e idade)
		 */
		int idade=0;
		int soma=0;
		int cont=0;
		int experiente=0;
		float media=0;
		int maior=0;
		String nome="";
		String resp="";

		do {
			nome = JOptionPane.showInputDialog("Digite o nome. ");
			System.out.println("O nome é: " + nome);
			idade = Integer.parseInt(JOptionPane.showInputDialog("Qual a idade? "));
			System.out.println("A idade é: " + idade);
			if (idade>18) {
				maior=maior+1;	
			}
			resp=JOptionPane.showInputDialog("Digite <S> para continuar.").toUpperCase();
			cont=cont+1;
			soma=soma+idade;
			experiente1=nome+idade;
			if (experiente1>experiente  ) {
				experiente=experiente1;
			}else
				experiente=experiente;


		}while(resp.equals("S"));
		media=soma/cont;
		System.out.println("Quatidade de pessoas maiores de idade: " + maior);
		System.out.println("A média entre as idades é: " + media);







	}
}
